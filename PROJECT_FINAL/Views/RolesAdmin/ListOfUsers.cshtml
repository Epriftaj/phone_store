@model IEnumerable<PROJECT_FINAL.Models.ApplicationUser>
@{
    ViewBag.Title = "ListOfUsers";
}

<h2 style="margin-top:80px">List of all Users</h2>

<table class="table table-striped" >
    <tr>
        <th>Email</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>
                <form action="@Url.Action("ManageUserRoles","RolesAdmin")" method="post" class="form-inline">
                    <input type="hidden" id="UserName" name="UserName" value="@item.UserName" />
                    <button class="btn btn-primary" type="submit"> Manage Roles</button>
                </form>
            </td>
            <td>
                @Html.ActionLink("Reset Password", "ResetPassword", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>